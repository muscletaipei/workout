<Window x:Class="OneRMEstimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPE 計算器" Height="900" Width="450">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18" Text="-----RPE訓練重量-----" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="實際訓練重量（kg）：" VerticalAlignment="Center"/>
                <TextBox x:Name="actualWeightTextBox" Width="50" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="實際訓練次數：" VerticalAlignment="Center"/>
                <TextBox x:Name="actualRepsTextBox" Width="50" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="預計訓練次數：" VerticalAlignment="Center"/>
                <TextBox x:Name="predictedRepsTextBox" Width="50" Height="30"/>
            </StackPanel>

            <Button Content="計算RPE" Width="150" Height="30" Click="Estimate1RM"/>
            <TextBlock x:Name="resultTextRM" FontSize="16" Margin="0,10,0,0"/>

            <TextBlock x:Name="resultTextBlock" FontSize="16" Margin="0,20,0,0"/>
            
            
        </StackPanel>
    </Grid>
</Window>
