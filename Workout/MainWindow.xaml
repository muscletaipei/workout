<Window x:Class="OneRMEstimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="1RM 估算器" Height="600" Width="400">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18" Margin="0,0,0,10"><Run Text="1RM "/><Run Language="zh-tw" Text="計"/><Run Text="算器"/></TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="訓練重量（kg）：" VerticalAlignment="Center"/>
                <TextBox x:Name="weightTextBox" Width="50" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="訓練次數：" VerticalAlignment="Center"/>
                <TextBox x:Name="repsTextBox" Width="50" Height="30"/>
            </StackPanel>

            <Button Content="計算" Width="150" Height="30" Click="Estimate1RM"/>

            <TextBlock x:Name="resultTextBlock" FontSize="16" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
